<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp,container-queries"></script>
</head>
<body class="bg-gray-100 p-6">
    <h2 class="text-3xl font-bold mb-6">Transactions</h2>
    
    <!-- Formulaire pour ajouter une nouvelle transaction -->
    <form action="/transactions" method="POST" class="bg-white p-6 rounded-lg shadow-md mb-8">
        <h3 class="text-2xl font-semibold mb-4">Ajouter une transaction</h3>
        
        <label for="compteID" class="block text-sm font-medium text-gray-700 mb-2">ID du compte:</label>
        <input type="number" id="compteID" name="compteID" class="border border-gray-300 p-2 rounded w-full mb-4" required>
        
        <label for="dateTransaction" class="block text-sm font-medium text-gray-700 mb-2">Date de la transaction:</label>
        <input type="datetime-local" id="dateTransaction" name="dateTransaction" class="border border-gray-300 p-2 rounded w-full mb-4" required>
        
        <label for="montant" class="block text-sm font-medium text-gray-700 mb-2">Montant:</label>
        <input type="number" id="montant" name="montant" class="border border-gray-300 p-2 rounded w-full mb-4" step="0.01" required>
        
        <label for="typeTransaction" class="block text-sm font-medium text-gray-700 mb-2">Type de transaction:</label>
        <select id="typeTransaction" name="typeTransaction" class="border border-gray-300 p-2 rounded w-full mb-4" required>
            <option value="Depot">Dépôt</option>
            <option value="Retrait">Retrait</option>
            <option value="Virement">Virement</option>
        </select>
        
        <button type="submit" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600">Ajouter</button>
    </form>
    
    <!-- Liste des transactions -->
    <h3 class="text-2xl font-semibold mb-4">Liste des transactions</h3>
    <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
        <thead class="bg-gray-200">
            <tr>
                <th class="border-b p-4 text-left">ID</th>
                <th class="border-b p-4 text-left">ID Compte</th>
                <th class="border-b p-4 text-left">Date</th>
                <th class="border-b p-4 text-left">Montant</th>
                <th class="border-b p-4 text-left">Type</th>
                <th class="border-b p-4 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach(transaction => { %>
                <tr>
                    <td class="border-b p-4"><%= transaction.transactionID %></td>
                    <td class="border-b p-4"><%= transaction.compteID %></td>
                    <td class="border-b p-4"><%= new Date(transaction.dateTransaction).toLocaleString() %></td>
                    <td class="border-b p-4"><%= transaction.montant %></td>
                    <td class="border-b p-4"><%= transaction.typeTransaction %></td>
                    <td class="border-b p-4">
                        <!-- Formulaire pour mettre à jour une transaction -->
                        <button onclick="showUpdateForm(<%= transaction.transactionID %>, '<%= transaction.compteID %>', '<%= new Date(transaction.dateTransaction).toISOString().slice(0, 16) %>', '<%= transaction.montant %>', '<%= transaction.typeTransaction %>')" class="bg-yellow-500 text-white p-2 rounded hover:bg-yellow-600">Mettre à jour</button>
                        <!-- Formulaire pour supprimer une transaction -->
                        <form action="/transactions/delete" method="POST" style="display:inline;">
                            <input type="hidden" name="transactionID" value="<%= transaction.transactionID %>">
                            <button type="submit" class="bg-red-500 text-white p-2 rounded hover:bg-red-600">Supprimer</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <!-- Formulaire pour mettre à jour une transaction, caché par défaut -->
    <div id="updateForm" class="hidden bg-white p-6 rounded-lg shadow-md mt-8">
        <h3 class="text-2xl font-semibold mb-4">Mettre à jour une transaction</h3>
        <form id="updateTransactionForm" action="/transactions/update" method="POST">
            <input type="hidden" name="transactionID" id="updateTransactionID">
            
            <label for="updateCompteID" class="block text-sm font-medium text-gray-700 mb-2">ID du compte:</label>
            <input type="number" id="updateCompteID" name="compteID" class="border border-gray-300 p-2 rounded w-full mb-4" required>
            
            <label for="updateDateTransaction" class="block text-sm font-medium text-gray-700 mb-2">Date de la transaction:</label>
            <input type="datetime-local" id="updateDateTransaction" name="dateTransaction" class="border border-gray-300 p-2 rounded w-full mb-4" required>
            
            <label for="updateMontant" class="block text-sm font-medium text-gray-700 mb-2">Montant:</label>
            <input type="number" id="updateMontant" name="montant" class="border border-gray-300 p-2 rounded w-full mb-4" step="0.01" required>
            
            <label for="updateTypeTransaction" class="block text-sm font-medium text-gray-700 mb-2">Type de transaction:</label>
            <select id="updateTypeTransaction" name="typeTransaction" class="border border-gray-300 p-2 rounded w-full mb-4" required>
                <option value="Depot">Dépôt</option>
                <option value="Retrait">Retrait</option>
                <option value="Virement">Virement</option>
            </select>
            
            <button type="submit" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600">Mettre à jour</button>
            <button type="button" onclick="hideUpdateForm()" class="bg-gray-500 text-white p-2 rounded hover:bg-gray-600 ml-4">Annuler</button>
        </form>
    </div>

    <script>
        function showUpdateForm(id, compteID, dateTransaction, montant, typeTransaction) {
            document.getElementById('updateTransactionID').value = id;
            document.getElementById('updateCompteID').value = compteID;
            document.getElementById('updateDateTransaction').value = dateTransaction;
            document.getElementById('updateMontant').value = montant;
            document.getElementById('updateTypeTransaction').value = typeTransaction;
            document.getElementById('updateForm').classList.remove('hidden');
        }

        function hideUpdateForm() {
            document.getElementById('updateForm').classList.add('hidden');
        }
    </script>
</body>
</html>
